<div class="content">
	<h2 align="center"><i/> All Categories </i> </h2>
	<% unless @categories.empty? %>
		<% @categories.each do |category| %>
			<h3><%= link_to category.name.capitalize, category_path(category), :target => '_blank' %></h3>
		<% end %>
	<% else %>
		<p> There are no categories yet!</p>
	<% end %>
</div>
<% if admin_signed_in? %>
	<div class="content">
		<h2 align="center"> <i> Add New Category </i> </h2>
		<%= form_for :category do |f| %>
			<b><%= f.label :name %></b>
		  <%= f.text_field :name, autofocus: true, :class => "text-box-a" %>
		  <%= f.submit "Save" , :class => "submit-button"%>
		<% end %>
	<% end %>
</div>