<div class="content">
	<h2 align="center"><i/> List of Products </i> </h2>
	<% unless @products.empty? %>
		<%= render :partial => 'product_list', :locals => {:products => @products} %>
	<% else %>
		<p> There are no products yet </p>
	<% end %>
</div>

<% if admin_signed_in? %>
	<%= render :partial => 'create_form' %>
<% end %>